# ERB templated nginx configuration
# see https://doc.scalingo.com/platform/deployment/buildpacks/nginx

upstream backend_server {
	server localhost:8000 fail_timeout=0;
}

server {
	
	listen <%= ENV["PORT"] %>;
	server_name _;
    server_tokens off;

    root /app/build/frontend-out;
    
    error_page 404 /404.html;

    # Django rest framework
    location ^~ /api/ {
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_redirect off;
		proxy_pass http://backend_server;
	}
    
    # Django admin
    location ^~ /<%= ENV["DJANGO_ADMIN_URL"] || "admin/" %> {
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_redirect off;
		proxy_pass http://backend_server;
	}

    # Next static export
    
    # ROUTES HERE!
    
    location = /404.html {
        internal;
    }

    # Frontend export

    location ~ "^/operators/?$" {
        try_files $uri /operators.html;
    }

    location ~ "^/operators/[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/?$" {
        try_files $uri /operators/[operator_id].html;
    }

    location ~ "^/operators/[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/organizations/[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/?$" {
        try_files $uri /operators/[operator_id]/organizations/[id].html;
    }

    location / {
        try_files $uri index.html $uri/ =404;
    }

}